<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2B2B2B">

    <TextView
        android:id="@+id/tvAjustaments"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ajustaments"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        android:fontFamily="@font/worksans"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <LinearLayout
        android:id="@+id/llSettings"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:background="#3C3C3C"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/tvAjustaments"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/navButtons">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp"
            android:padding="16dp"
            android:background="#535353">

            <ImageView
                android:id="@+id/ivVolum"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:contentDescription="Icono Volum"
                android:src="@drawable/volume_up_24dp_ffffff_fill0_wght400_grad0_opsz24" />

            <TextView
                android:id="@+id/tvVolum"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_weight="1"
                android:text="Volum"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:fontFamily="@font/worksans" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp"
            android:padding="16dp"
            android:background="#535353">

            <ImageView
                android:id="@+id/ivIdioma"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:contentDescription="Icono Idioma"
                android:src="@drawable/language_24dp_ffffff_fill0_wght400_grad0_opsz24" />

            <TextView
                android:id="@+id/tvIdioma"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_weight="1"
                android:text="Idioma"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:fontFamily="@font/worksans" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:background="#535353">

            <ImageView
                android:id="@+id/ivVibracio"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:contentDescription="Icono Vibració"
                android:src="@drawable/vibration_24dp_ffffff_fill0_wght400_grad0_opsz24" />

            <TextView
                android:id="@+id/tvVibracio"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_weight="1"
                android:text="Vibració"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:fontFamily="@font/worksans" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/navButtons"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:background="#535353"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/btnSettings"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:contentDescription="Settings"
            android:src="@drawable/settings"
            android:clickable="true"
            android:focusable="true"/>

        <ImageView
            android:id="@+id/btnQR"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:contentDescription="QR Code"
            android:src="@drawable/qr_code"
            android:clickable="true"
            android:focusable="true"/>

        <ImageView
            android:id="@+id/btnProfile"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:contentDescription="Profile"
            android:src="@drawable/user"
            android:clickable="true"
            android:focusable="true"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
