<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Tema de la Splash Screen -->
    <style name="SplashTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Fondo de la splash screen -->
        <item name="android:windowBackground">@drawable/splash_background</item>

        <!-- Ocultar la barra de estado -->
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <!-- Tema principal de la aplicaciÃ³n -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Color primario -->
        <item name="colorPrimary">@color/material_dynamic_primary0</item>
        <item name="colorPrimaryVariant">@color/material_dynamic_primary0</item>
        <item name="colorOnPrimary">@color/text_white</item>

        <!-- Color secundario -->
        <item name="colorSecondary">@color/button_red</item>
        <item name="colorSecondaryVariant">@color/material_dynamic_primary0</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Color de fondo -->
        <item name="android:colorBackground">@color/background_dark</item>
        <item name="android:textColor">@color/text_white</item>

        <!-- Personaliza elementos del tema -->
        <item name="materialButtonStyle">@style/CustomButtonStyle</item>

        <!-- Color de la barra de estado -->
        <item name="android:statusBarColor">@color/black</item>
    </style>

    <!-- Estilo personalizado para botones -->
    <style name="CustomButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/button_red</item>
        <item name="android:textColor">@color/text_white</item>
        <item name="cornerRadius">16dp</item>
    </style>

</resources>
